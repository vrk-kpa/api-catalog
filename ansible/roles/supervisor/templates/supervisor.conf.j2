[program:ckan_gather_consumer]

command=nice -n 20 {{ virtualenv }}/bin/ckan --config "{{ ckan_ini }}" harvester gather-consumer
user={{ harvester_user }}
numprocs=1
stdout_logfile={{ supervisor_log_path }}/gather_consumer.log
stderr_logfile={{ supervisor_log_path }}/gather_consumer.log
autostart=true
autorestart=true
startsecs=10


