{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "API catalog service/interface schema",
  "about_url": "http://github.com/vrk-kpa/api-catalog",
  "dataset_fields": [
    {
      "field_name": "title_translated",
      "label": "Title",
      "additional_description": "Service name will be filled automatically and should not be edited",
      "preset": "fluent_core_title_translated",
      "input_title": ["Service name"],
      "only_default_lang_required": true,
      "form_placeholder": "ServiceName",
      "placeholder_autofill": true,
      "form_languages": ["en"],
      "show_url": false,
      "display_hr": true,
      "display_snippet": null
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug_ex",
      "form_placeholder": "eg. my-dataset",
      "form_snippet": "url_slug.html",
      "final": true
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization_ex",
      "final": true
    },
    {
      "field_name": "notes_translated",
      "label": "Service description",
      "extra_label": "A general, concise, and easy-to-understand description of the organization",
      "input_title": ["Description in Finnish", "Description in Swedish", "Description in English"],
      "required": false,
      "only_default_lang_required": false,
      "display_hr": true,
      "form_placeholder": "Write subsystem description",
      "form_languages": ["fi", "sv", "en"],
      "form_snippet": "fluent_markdown.html"
    },
    {
      "field_name": "keywords",
      "label": "Keywords",
      "form_placeholder": "e.g. names",
      "form_languages": ["fi", "en", "sv"],
      "preset": "fluent_vocabulary_with_autocomplete",
      "validators": "fluent_tags create_fluent_tags(keywords)",
      "form_attrs": {
        "data-module": "autocomplete",
        "data-module-tags": "",
        "data-module-source": "/api/2/util/tag/autocomplete?incomplete=?&vocabulary_id=keywords"
      },
      "description": ""
    },
    {
      "field_name": "private",
      "label": "Visibility",
      "extra_label": "Service visibility",
      "additional_description": "When service visibility is private, it is only visible to the owner organisation or users from allowed organisations",
      "validators": "boolean_validator valid_resources",
      "form_snippet": "radio.html",
      "display_hr": false,
      "choices": [
        {
          "value": "public",
          "label": "Public",
          "checked": true
        },
        {
          "value": "private",
          "label": "Private",
          "checked": false
        }
      ]
    },
    {
      "field_name": "allowed_organizations",
      "label": "Allowed Organizations",
      "classes": ["control-full"],
      "preset": "apicatalog_organization_string_autocomplete",
      "form_placeholder": "Allowed Organisations",
      "validators": "ignore_missing"
    },
    {
      "field_name": "chargeability",
      "label": "Chargeability",
      "extra_label": "Other information and settings",
      "validators": "boolean_validator valid_resources",
      "form_snippet": "radio.html",
      "display_hr": true,
      "choices": [
        {
          "value": "chargeable",
          "label": "Chargeable",
          "checked": true
        },
        {
          "value": "free_of_charge",
          "label": "Free of charge",
          "checked": false
        },
        {
          "value": "mentioned_in_service_description",
          "label": "Mentioned in service description",
          "checked": false
        }
      ]
    },
    {
      "field_name": "format",
      "label": "Format",
      "classes": ["control-full"],
      "form_snippet": "select.html",
      "choices": [
        {
          "label": "WSDL",
          "value": "wsdl"
        },
        {
          "label": "OpenAPI JSON",
          "value": "openapi-json"
        }
      ]
    },
    {
      "field_name": "license",
      "label": "License",
      "classes": ["control-full"],
      "form_snippet": "select.html",
      "choices": [
        {
          "label": "No license specified",
          "value": "no_license_specified"
        },
        {
          "label": "Open Database license",
          "value": "open_database_license"
        }
      ]
    },
    {
      "field_name": "validSince",
      "label": "Valid since",
      "classes": ["control-full"],
      "preset": "date"
    },
    {
      "field_name": "validUntil",
      "label": "Valid until",
      "classes": ["control-full"],
      "preset": "date"
    },
    {
      "field_name": "web_address",
      "label": "Web address",
      "additional_description": "URL will be formed automatically from the name of the application and should in general not be edited.",
      "form_snippet": "url.html",
      "show_url": true
    },
    {
      "field_name": "maintainer",
      "label": "Maintainer",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor",
      "classes": ["control-full"]
    },
    {
      "field_name": "maintainer_email",
      "label": "Maintainer Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:contributor",
      "display_snippet": "email.html",
      "classes": ["control-full"]
    },
    {
      "field_name": "maintainer_phone",
      "label": "Maintainer phone number",
      "form_placeholder": "+358123456789",
      "display_property": "dc:contributor",
      "classes": ["control-full"]
    },
    {
      "field_name": "xroad_instance",
      "label": "X-Road instance",
      "form_snippet": null,
      "validators": "ignore_not_sysadmin keep_old_value_if_missing default_value()"
    },
    {
      "field_name": "xroad_memberclass",
      "label": "X-Road member class",
      "form_snippet": null,
      "validators": "ignore_not_sysadmin keep_old_value_if_missing default_value()"
    },
    {
      "field_name": "xroad_membercode",
      "label": "X-Road member code",
      "form_snippet": null,
      "validators": "ignore_not_sysadmin keep_old_value_if_missing default_value()"
    },
    {
      "field_name": "xroad_subsystemcode",
      "label": "X-Road subsystem code",
      "form_snippet": null,
      "validators": "ignore_not_sysadmin keep_old_value_if_missing default_value()"
    },
    {
      "field_name": "service_permission_settings",
      "form_snippet": null,
      "display_snippet": null,
      "validators": "keep_old_value_if_missing scheming_valid_json_object ignore_missing",
      "output_validators": "scheming_load_json ignore_not_package_maintainer"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload_ex",
      "final": true
    },
    {
      "field_name": "name",
      "label": "Name",
      "required": true,
      "form_snippet": "text_ex.html",
      "final": true
    },
    {
      "field_name": "description_translated",
      "label": "Description",
      "preset": "fluent_core_markdown_translated",
      "form_placeholder": "eg. A detailed description",
      "form_languages": ["fi", "sv", "en"]
    },
    {
      "field_name": "chargeability",
      "label": "Chargeability",
      "preset": "select",
      "classes": ["control-full"],
      "choices": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        },
        {
          "value": "maybe",
          "label": "See description"
        }
      ]
    },
    {
      "field_name": "format",
      "label": "Format",
      "classes": ["control-full"],
      "preset": "apicatalog_resource_format_autocomplete"
    },
    {
      "field_name": "validSince",
      "label": "Valid since",
      "preset": "date",
      "classes": ["control-full"]
    },
    {
      "field_name": "validUntil",
      "label": "Valid until",
      "preset": "date",
      "classes": ["control-full"]
    },
    {
      "field_name": "connection_information",
      "label": "Information about the interface",
      "preset": "fluent_text",
      "classes": ["control-full"],
      "form_languages": ["fi", "sv", "en"],
      "help_text": "Other information about the API, e.g. how to take into use, parameters, terms of use (unless available in a separate document)"
    },
    {
      "field_name": "availability",
      "label": "Availability",
      "preset": "fluent_text",
      "classes": ["control-full"],
      "form_languages": ["fi", "sv", "en"],
      "help_text": "Information on the availability of the API, e.g. available 24/7, or available only during business hours"

    },
    {
      "field_name": "sla",
      "label": "SLA",
      "preset": "fluent_text",
      "classes": ["control-full"],
      "form_languages": ["fi", "sv", "en"],
      "help_text": "Additional information on the SLA of the API, e.g. response time or speed"

    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "classes": ["control-full"],
      "display_snippet": "license.html",
      "form_attrs": {
        "class": "form-control"
      }
    },
    {
      "field_name": "valid_content",
      "form_snippet": false,
      "display_snippet": null
    },
    {
      "field_name": "harvested_from_xroad",
      "label": "Harvested from X-Road",
      "form_snippet": false,
      "display_snippet": null,
      "validators": "keep_old_value_if_missing default_value(false) boolean_validator ignore_not_sysadmin"
    },
    {
      "field_name": "xroad_servicecode",
      "label": "X-Road service code",
      "form_snippet": false,
      "validators": "ignore_not_sysadmin keep_old_value_if_missing default_value()"
    },
    {
      "field_name": "xroad_serviceversion",
      "label": "X-Road service version",
      "form_snippet": false,
      "validators": "ignore_not_sysadmin keep_old_value_if_missing default_value()"
    },
    {
      "field_name": "xroad_service_type",
      "label": "X-Road service type",
      "form_snippet": false,
      "validators": "ignore_not_sysadmin keep_old_value_if_missing default_value()"
    },
    {
      "field_name": "wsdl_timestamp",
      "label": "WSDL timestamp",
      "preset": "datetime",
      "form_snippet": false,
      "display_snippet": null
    },
    {
      "field_name": "rest_timestamp",
      "label": "Rest timestamp",
      "preset": "datetime",
      "form_snippet": false,
      "display_snippet": null
    },
    {
      "field_name": "access_restriction_level",
      "label": "Access Restriction Level",
      "preset": "select",
      "classes": ["control-full"],
      "choices": [
        {
          "value": "public",
          "label": "Public"
        },
        {
          "value": "same_organization",
          "label": "Same Organization Members"
        },
        {
          "value": "only_allowed_organizations",
          "label": "Allowed Organizations Only"
        }
      ]
    },
    {
      "field_name": "allowed_organizations",
      "label": "Allowed Organizations",
      "classes": ["control-full"],
      "preset": "apicatalog_organization_string_autocomplete"
    }
  ]
}
